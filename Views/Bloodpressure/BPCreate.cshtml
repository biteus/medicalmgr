@model BloodPressure

@{
    ViewBag.Title = "Add Blood Pressure";
}

<div class="row">
    <form asp-controller="BloodPressure" asp-action="BPCreate" method="post" class="mt-3">
        @* <h2>Enter Blood Pressure Reading</h2> <span style="color:green">Diastolic Normal: Less then 80 </span> <span style="color:red">Crisis: 120 + Call Doctor, Emergency </span>*@
        <h4>Enter Blood Pressure Reading</h4>
        <div asp-validation-summary="All" , class="text-danger"></div>
        <div class="row ">
            <div class="col-sm-2" style="background-color:none;"></div>
            <div class="col-sm-6">
                <img src="~/img/Chart_BP.jpg" alt="Blood  Pressure Chart" width="350" height="300">
            </div>
        </div>

        <div class="row ">
            <div class="col-sm-2" style="background-color:none;"></div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="Systolic"></label>
                    <input asp-for="Systolic" class="form-control" />
                    <span asp-validation-for="Systolic" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="Diastolic"></label>
                    <input asp-for="Diastolic" class="form-control" />
                    <span asp-validation-for="Diastolic" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    <label asp-for="Pulse"></label>
                    <input asp-for="Pulse" class="form-control" />
                    <span asp-validation-for="Pulse" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2" style="background-color:none;"></div>
        </div>
        <div class="row ">
            <div class="col-sm-2" style="background-color:none;"></div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label asp-for="ReadingDate"></label>
                    <input asp-for="ReadingDate" class="form-control" />
                    <span asp-validation-for="ReadingDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label asp-for="Administor"></label>
                    <input asp-for="Administor" class="form-control" />
                    <span asp-validation-for="Administor" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2" style="background-color:none;"></div>
        </div>

        <div class="row ">
            <div class="col-sm-2" style="background-color:none;"></div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="Notes"></label>
                    <input asp-for="Notes" class="form-control" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2" style="background-color:none;"></div>
        </div>


        <div class="row ">
            <div class="col-sm-2" style="background-color:none;"></div>
            <div class="col-sm-6" style="background-color:none;">
                <button type="submit" class="btn btn-success btn-sm btn-block">Submit</button>
                <button type="reset" class="btn btn-secondary btn-sm btn-block">Reset</button>
                <button type="button" class="btn btn-dark btn-sm btn-block">Cancel</button>
                <button type="button" class="btn btn-info btn-sm btn-block"><a href="@Url.Action("BPList", "Bloodpressure")"><span>List</span></a></button>
